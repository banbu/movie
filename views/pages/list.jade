doctype
html
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible' content='IE=Edge')
    title #{title}
    include ../layout/css.jade
  body
    .container
      .row
        table.table.table-hover.table-bordered
          thead
            tr
              th 电影名称
              th 导演
              th 国家
              th 上映年份
              th 录入时间
              th 查看
              th 更新
              th 删除
          tbody
            each item in movie
              tr(class="item-id-#{item.id}")
                td #{item.title}
                td #{item.direction}
                td #{item.country}
                td #{moment(item.year).format('YYYY/MM/DD')}
                td #{moment(item.updateAt).format('YYYY-MM-DD')}
                td: a(target="_blank", href="../detail/#{item.id}") 查看
                td: a(target="_blank", href="../admin/update/#{item.id}") 修改
                td
                  button.btn.btn-danger.del(type="button", data-id="#{item.id}" ,name="#{item.id}") 删除
    include ../layout/footer.jade
    script(type="text/javascript",src="/static/public/delete.js")